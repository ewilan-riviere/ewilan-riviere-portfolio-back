        "/texts": {
            "get": {
                "tags": [
                    "portfolio"
                ],
                "summary": "Liste des textes",
                "description": "Les textes",
                "operationId": "App\\Http\\Controllers\\Api\\TextController::index",
                "responses": {
                    "200": {
                        "description": "Successful operation"
